@model ShopifyFeed.Elements.ShopifyFeed

<fieldset>

    <div>
        <label for="@Html.FieldIdFor(m => m.FeedUrl)">@T("Feed url")</label>
        @Html.TextBoxFor(m => m.FeedUrl, new { @class = "text medium" })
        @Html.ValidationMessageFor(m => m.FeedUrl)
    </div>

    <div>
        <label for="@Html.FieldIdFor(m => m.NumberToShow)">@T("Number to show")</label>
        @Html.TextBoxFor(m => m.NumberToShow, new { @class = "text small" })
        @Html.ValidationMessageFor(m => m.NumberToShow)
        @Html.Hint(T("0 means all"))
    </div>

    <div>
        <label for="@Html.FieldIdFor(m => m.Randomise)">@T("Randomise")</label>
        @Html.CheckBoxFor(m => m.Randomise, new { @class = "text medium" })
        @Html.ValidationMessageFor(m => m.Randomise)
        @Html.Hint(T("Whether to randomise the results"))
    </div>

</fieldset>